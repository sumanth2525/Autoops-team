# AutoOps Task Board - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Server Configuration
PORT=3001

# JWT Secret (REQUIRED)
# Generate a strong random secret (32+ characters)
# Example: openssl rand -hex 32
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Database Configuration
DB_SERVER=localhost\\SQLEXPRESS
DB_NAME=AutoOpsDB
DB_USER=
DB_PASSWORD=
DB_ENCRYPT=false

# Email Configuration
# Choose one method: 'api', 'smtp_brevo', or 'smtp_gmail'
EMAIL_METHOD=api

# Brevo API Configuration (for EMAIL_METHOD=api)
BREVO_API_KEY=YOUR_BREVO_API_KEY_HERE
BREVO_SENDER_EMAIL=noreply@autoops.com
BREVO_SENDER_NAME=AutoOps Team

# Brevo SMTP Configuration (for EMAIL_METHOD=smtp_brevo)
BREVO_SMTP_SERVER=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_LOGIN=YOUR_BREVO_SMTP_LOGIN_HERE
BREVO_SMTP_PASSWORD=YOUR_BREVO_SMTP_PASSWORD_HERE

# Gmail SMTP Configuration (for EMAIL_METHOD=smtp_gmail)
# Note: Gmail requires an App Password, not your regular password
# Enable 2-Step Verification and generate App Password at:
# https://myaccount.google.com/apppasswords
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_SMTP_USERNAME=YOUR_GMAIL_ADDRESS_HERE
GMAIL_SMTP_PASSWORD=YOUR_GMAIL_APP_PASSWORD_HERE
GMAIL_SENDER_EMAIL=YOUR_GMAIL_ADDRESS_HERE
GMAIL_SENDER_NAME=AutoOps Team

# Flask Debug Mode (set to 'true' for development, 'false' for production)
FLASK_DEBUG=false
